<%- include("../header.ejs") %>

<main class="app-main">
    <!--begin::App Content Header-->
    <div class="app-content-header">
      <!--begin::Container-->
      <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
          <div class="col-sm-6"><h3 class="mb-0">General Form</h3></div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-end">
              <li class="breadcrumb-item"><a href="#">Blogs</a></li>
              <li class="breadcrumb-item active" aria-current="page">Update Blogs</li>
            </ol>
          </div>
        </div>
        <!--end::Row-->
      </div>
      <!--end::Container-->
    </div>
    <!--end::App Content Header-->
    <!--begin::App Content-->
    <div class="app-content">
      <!--begin::Container-->
      <div class="container-fluid">
        <!--begin::Row-->
        <div class="row g-4">
          <!--begin::Col-->
          <div class="col-12">
            <div class="callout callout-info">
              For detailed documentation of Form visit
              <a
                href="https://getbootstrap.com/docs/5.3/forms/overview/"
                target="_blank"
                rel="noopener noreferrer"
                class="callout-link"
              >
                Bootstrap Form
              </a>
            </div>
          </div>
          <!--end::Col-->
          <!--begin::Col-->
          <div class="col-md-6">
            <!--begin::Quick Example-->
            <div class="card card-primary card-outline mb-4">
              <!--begin::Header-->
              <div class="card-header"><div class="card-title">Add Admin</div></div>
              <!--end::Header-->
              <!--begin::Form-->
              <form method="post" action="/blogs/EditBlog" >
                <input type="hidden" name="id" value="<%= updateblog.id %>">

                <!--begin::Body-->
                <div class="card-body">
                    <!-- category -->
                     <div class="mb-3">
                         <label for="exampleInputname" class="form-label">category Name</label>
                        <select name="categoryId" id="" class="form-control">
                            <option value="">--select category--</option>
                            <% categorydata.map((v,i)=>{ %> 
                                <option value="<%= v.id %>" <% if(updateblog.categoryId==v.id){ %> <%= 'selected' %> <% } %>><%= v.categoryName %></option>
                                <% }) %>
                        </select>
                      </div>
                 <!-- title -->
                      <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Blog Title</label>
                        <input type="text" class="form-control" id="exampleInputPassword1" name="title" value="<%= updateblog.title %>" />
                      </div>
                <!-- description -->
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Description</label>
                    <textarea name="description" id=""><%- updateblog.description %></textarea>
                    <!-- <input type="text" class="form-control" value="" id="exampleInputPassword1" name="description" /> -->
                  </div>

                  <!-- status -->
                      <div class="row mb-3">
                        <legend class="col-form-label col-sm-2 pt-0">status</legend>
                        <div class="col-sm-10">
                          <div class="form-check">
                            <input
                              class="form-check-input"
                              type="radio"
                              name="status"
                              
                              value="true"
                              checked
                              <% if(updateblog.status=='true'){ %> <%= 'checked' %> <% } %>
                            />
                            <label class="form-check-label"> true </label>
                          </div>
                          <div class="form-check">
                            <input
                              class="form-check-input"
                              type="radio"
                              name="status"
                              id="gridRadios2"
                              value="false"
                              <% if(updateblog.status=='false'){ %> <%= 'checked' %> <% } %>
                        
                            />
                            <label class="form-check-label" for="gridRadios2"> false </label>
                          </div>
                         
                        </div>
                    </div>
                         
                  <div class="input-group mb-3">
                    <input type="file" class="form-control" id="inputGroupFile02" name="image" value="<%= updateblog.image %>"/>
                    <label class="input-group-text" for="inputGroupFile02" name="image" value="<%= updateblog.image %>">Upload</label>
                  </div>

                  
                  <!-- <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">update date</label>
                    <input type="date" class="form-control" value="<%= updateblog.updatedDate %>" id="exampleInputPassword1" name="updatedDate" />
                  </div> -->
               
                 
                 
               
                 
                 
                </div>
                <!--end::Body-->
                <!--begin::Footer-->
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary" name="submit" value="submit">Submit</button>
                </div>
                <!--end::Footer-->
              </form>
              <!--end::Form-->
            </div>
            <!--end::Quick Example-->
            <!--begin::Input Group-->
            
            <!--end::Input Group-->
          
          </div>
          
        </div>
        <!--end::Row-->
      </div>
      <!--end::Container-->
    </div>
    <!--end::App Content-->
  </main>

<%-include("../footer") %>

